<div class="jumbotron">
	<h1>Beauty Articles</h1>
	<p>Click on an article to read it, save it to read later, or add a comment.</p>
</div>

{{#each articles}}
	<div class="input-group articles-list">
		<img width = "180" height = "135" style= "float: left" src={{this.imgLink}}>	
		<a href="{{this.storyLink}}" target="_blank" class="form-control" id="title" style= "color: purple; background-color: black; float: left">{{this.title}} </a>
		<br>
		<p class="summary">{{this.summary}}</p>		

		<span class="input-group-btn">		
			<form action="/saved/{{this.id}}" method="POST">
				<button type="submit" class="btn btn-secondary save" style= "background-color: purple" >Save Article</button>
			</form>
		</span>
		<span class="input-group-btn">
			<form action='/articles/{{this.id}}' method="GET">
				<button type="submit" class="btn btn-secondary" style= "background-color: purple">Note</button>
			</form>
		</span>
	</div>
	<br>
	<br>
	<br>		
{{/each}}
